{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clang build",
            "type": "shell",
            "command": "make",
            "args": [
                "onlybuild",
                "--directory=${workspaceFolder};"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clang clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean",
                "--directory=${workspaceFolder};"
            ]
        },
        {
            "label": "clang clean build",
            "dependsOrder": "sequence",
            "dependsOn":[
                "clang clean",
                "clang build"
            ]
        }
    ]
}